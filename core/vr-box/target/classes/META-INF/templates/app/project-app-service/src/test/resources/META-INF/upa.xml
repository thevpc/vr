<?xml version="1.0" encoding="UTF-8"?>
<upa xmlns="http://github.com/thevpc/upa/upa-1.0.xsd" version="1.0">
    <scan types="net.vpc.app.**"/>
    <scan types="${{packageName(ProjectGroup)}}.**"/>
    <include>
        <file path="${user.home}/workspace/${{ProjectName}}/config/upa.xml" failSafe="true"/>
        <!-- this is a fallback if no config is loadable -->
        <default>
            <persistenceUnit name="main">
                <connection>
                    <!-- use this if you want to consider embedded derby
                    <connectionString>
                        derby:embedded://${user.home}/workspace/${{ProjectName}}/db/${{packageName(ProjectName)}};structure=create;userName=appuser;password=appsecret
                    </connectionString>
                    -->
                    <connectionString>
                        derby://localhost/${{packageName(ProjectName)}};structure=create;userName=appuser;password=appsecret
                    </connectionString>
                </connection>
            </persistenceUnit>
        </default>
    </include>
</upa>
